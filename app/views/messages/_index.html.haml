.side-bar
  .side-header
    .side-header__box
      .side-header__box__user-name
        = current_user.name
      %ul.side-header__box__icon
        %li
          = link_to new_group_path do
            = icon 'far', 'edit'
        %li.side-header__box__icon__edit-user
          = link_to edit_user_path(current_user) do
            = icon "fa", "cog"

  .side-groups
    - current_user.groups.each do |group|
      .group
        = link_to '#' do
          .group__name
            = group.name
          .group__message
            メッセージはまだありません。
      .side-groups__group-box
        = link_to "#" do
          %p.group__group-name
          グループ名
          %p.group__latest-messages
          メッセージはまだありません    


.chat-main
  .main-header
    .main-header__left-box
      .main-header__left-box__currentt-group
        現在のグループ名
      .main-header__left-box__member-list
        Member:
        %li.main-header__left-box__member-list__member
          メンバー名
        %li.main-header__left-box__member-list__member
          メンバー名2
    .main-header__edit-btn
      = link_to "#" do
        Edit

  .main-messages
    .main-messages__message
      .main-messages__message__upper-info
        %p.main-messages__message__upper-info__talker
          メンバー名
        %p.main-messages__message__upper-info__date
          20200320180000
      .main-messages__message__comment
        コメント
    .main-messages__message
      .main-messages__message__upper-info
        %p.main-messages__message__upper-info__talker
          メンバー名２
        %p.main-messages__message__upper-info__date
          20200320180001
      .main-messages__message__comment
        コメント2

  .main-form
    %form.new__message
      .input-box
        %input{type: "text", class: "input-box__text",placeholder: "type a message"}
        %label{class: "input-box__image"}
          = icon("fas", "image")
          %input{type: "file", class: "input-box__image__file"}
      %input{type: "submit", class: "submit-btn"}
