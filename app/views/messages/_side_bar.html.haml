.side-bar
  .side-header
    .side-header__box
      .side-header__box__user-name
        = current_user.name
      %ul.side-header__box__icon
        %li
          = link_to new_group_path do
            = icon 'far', 'edit'
        %li.side-header__box__icon__edit-user
          = link_to edit_user_path(current_user) do
            = icon "fa", "cog"

  .side-groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message
     